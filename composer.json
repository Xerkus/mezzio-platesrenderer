{
    "name": "mezzio/mezzio-platesrenderer",
    "description": "Plates integration for Mezzio",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "mezzio",
        "http",
        "league",
        "plates",
        "psr",
        "psr-7"
    ],
    "homepage": "https://mezzio.dev",
    "support": {
        "docs": "https://docs.mezzio.dev/mezzio-platesrenderer/",
        "issues": "https://github.com/mezzio/mezzio-platesrenderer/issues",
        "source": "https://github.com/mezzio/mezzio-platesrenderer",
        "rss": "https://github.com/mezzio/mezzio-platesrenderer/releases.atom",
        "chat": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "require": {
        "php": ">=5.5",
        "container-interop/container-interop": "^1.1",
        "laminas/laminas-zendframework-bridge": "^1.0",
        "league/plates": "^3.1",
        "mezzio/mezzio-template": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "suggest": {
        "aura/di": "3.0.*@beta to make use of Aura.Di dependency injection container",
        "laminas/laminas-servicemanager": "^2.5 to use laminas-servicemanager for dependency injection",
        "mouf/pimple-interop": "^1.0 to use Pimple for dependency injection"
    },
    "autoload": {
        "psr-4": {
            "Mezzio\\Plates\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MezzioTest\\Plates\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit"
    },
    "replace": {
        "zendframework/zend-expressive-platesrenderer": "self.version"
    }
}
